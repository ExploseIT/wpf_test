<UserControl x:Class="wpf_test.UCs.ucMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_test.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="White"
             >

    <StackPanel>
        <Label x:Name="labChooseApplication" Content="Choose Application" HorizontalAlignment="Stretch" FontSize="20" Margin="0,20,0,0"  VerticalAlignment="Top" Width="200" HorizontalContentAlignment="Center"/>
        <Button HorizontalAlignment="Center" Margin="0,30,0,0" Width="120" VerticalAlignment="Top" Content="Sqlite Browser" Click="OnGoSqliteBrowser_Click"/>
        <Button HorizontalAlignment="Center" Margin="0,30,0,0" Width="120" VerticalAlignment="Top" Content="File Concatenate" Click="OnGoFileConcatenate_Click"/>

    </StackPanel>
</UserControl>
